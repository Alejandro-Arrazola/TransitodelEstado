<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<ImageView
    android:id="@+id/imtipo"
    android:layout_width="350px"
    android:layout_height="350px"
    android:layout_centerHorizontal="true"
    android:background="@drawable/oax"
    />
    <TextView
        android:id="@+id/tipoevento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIPO DE EVENTO"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="15px"/>
    <TextView
        android:layout_margin="15px"
        android:id="@+id/localizacionevento"
        android:layout_below="@+id/tipoevento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="LOCALIZACION DEL EVENTO"/>

    <TextView
        android:id="@+id/fechaevento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Evento"
        android:layout_below="@+id/localizacionevento"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_below="@+id/fechaevento"
        android:layout_centerHorizontal="true"
        android:id="@+id/envioreport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENVIAR REPORTE"/>


</RelativeLayout>